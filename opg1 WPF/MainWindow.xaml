        <Button x:Name="ButtonOpg18" Content="Opgave1.8" HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" Margin="10,10,10,10" Grid.Column="0" Grid.Row="6" Click="ButtonOpg18_Click"/>
        <Button x:Name="ButtonOpg19" Content="Opgave1.9" HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" Margin="10,10,10,10" Grid.Column="0" Grid.Row="7" Click="ButtonOpg19_Click"/>

